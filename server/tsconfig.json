{
    "compilerOptions": {
      "lib": ["ES2022"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2022",
      
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
    },
    "exclude": ["node_modules"]
  }